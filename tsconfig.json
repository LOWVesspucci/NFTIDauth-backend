{
    "compilerOptions": {
      "rootDir": ".",
      "strict": true,
      "module": "CommonJS",
      "target": "es6",
      "lib": ["ES2020"],
      "sourceMap": true,
      "esModuleInterop": true,
      "noImplicitThis": true,
      "declaration": true,
      "declarationDir": "./types",
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@web3auth/*": ["packages/*/src"],
      }
    }
  }
  